doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="../css/dist/setting.css")
        title Shopify
    body
        main.sidebar-toggled
            aside
                .sidebar.toggled
                    span#sidebar-toggle
                        ion-icon(name="arrow-back-circle-outline")
                    #homePage.main-nav-logo.change-page
                        a(href="#")
                            img(src="../img/rubix.png" alt="Rubix - My test programming" class="main-nav-logo__img")
                            span.main-nav-logo__link RUBIX

                    ul.main-side
                        li#homePage.main-side__list.change-page
                            a(href="#")
                                ion-icon(class="main-side__img" name="home-outline")
                                span Home
                        li#overviewPage.main-side__list.change-page
                            a(href="#")
                                ion-icon(class="main-side__img" name="stats-chart-outline")
                                span Overview
                        li#breakdownPage.main-side__list.change-page
                            a(href="#")
                                ion-icon(class="main-side__img" name="analytics-outline")
                                span Breakdown
                        li#comparisonPage.main-side__list.change-page
                            a(href="#")
                                ion-icon(class="main-side__img" name="copy-outline")
                                span Comparison
                        li#accountPage.main-side__list.change-page
                            a(href="#")
                                ion-icon(class="main-side__img" name="person-circle-outline")
                                span Account
                        li#settingPage.main-side__list.change-page
                            a(href="#")
                                ion-icon(class="main-side__img" name="settings-outline")
                                span Desk Settings
            .main
                //- content will added by javascript here
        script(type="module" src="../js/switchPages.js")
        script(src="../js/toggleSide.js") 
        script(src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js")